integer riderAge
integer riderHeight

riderAge = Get next input
riderHeight = Get next input

if riderAge < 10
   Put "Can't ride. Too young" to output
elseif riderAge > 80
   Put "Can ride, but sure?" to output
elseif riderHeight < 48 
   Put "Can't ride: Too short" to output
else
   Put "Can ride" to output